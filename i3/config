# Work vpn all-the-time
exec_always --no-startup-id pass Emberex/comp/linux | sudo -S ~/.bin/vpn

# Disable display sleeping (causes audio issues with HDMI)
# See: https://wiki.archlinux.org/index.php/Display_Power_Management_Signaling
#exec_always sleep 1; xset dpms 0 0 0
exec_always sleep 1; xset s off -dpms

# Adapted from https://faq.i3wm.org/question/3747/enabling-multimedia-keys/?answer=3759#post-id-3759
# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec amixer -q -D pulse sset Master 5%+ && pkill -RTMIN+7 i3blocks #increase sound volume
bindsym XF86AudioLowerVolume exec amixer -q -D pulse sset Master 5%- && pkill -RTMIN+7 i3blocks #decrease sound volume
bindsym XF86AudioMute exec amixer -q -D pulse sset Master toggle && pkill -RTMIN+7 i3blocks # mute sound

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec xbacklight -inc 20 # increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 20 # decrease screen brightness

# Media player controls
bindsym XF86AudioPlay exec playerctl play-pause && pkill -RTMIN+10 i3blocks
bindsym XF86AudioPause exec playerctl play-pause && pkill -RTMIN+10 i3blocks
bindsym XF86AudioNext exec playerctl next && pkill -RTMIN+10 i3blocks
bindsym XF86AudioPrev exec playerctl previous && pkill -RTMIN+10 i3blocks

# Mouse Focus
focus_follows_mouse no

# Work keyboard fix
exec_always setxkbmap -option caps:swapescape -option keypad:atm -option compose:rctrl

# Screen Resolution and Layout, produced with arandr
exec_always ~/.screenlayout/primary

# Work Laptop, No External, Rescue Me Config
bindsym $mod+shift+l exec xrandr --output VIRTUAL1 --off --output eDP1 --mode 2560x1440 --pos 0x0 --rotate normal --output DP1 --off --output HDMI2 --off --output HDMI1 --off --output DP2 --off

